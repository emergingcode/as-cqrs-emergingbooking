@page "{reservationCode}"

@model EmergingBookingUI.ReservationDetailsModel

@{
    ViewData["Title"] = "Reservation Details";
}

<h1>Reservation Details</h1>

<form>
    <div class="form-group">
        <div>
            <label for="message-text" class="col-form-label">Reservation Code:</label>
            <label for="message-text" class="col-form-label"><b>@Model.Details.Code</b></label>
        </div>
    </div>
    <div class="form-group">
        <div>
            <label for="message-text" class="col-form-label">Booked By:</label>
            <label for="message-text" class="col-form-label"><b>@Model.Details.BookedBy</b></label>
        </div>
    </div>
    <div class="form-group">
        <div>
            <label for="message-text" class="col-form-label">Booking Period:</label>
            <label for="message-text" class="col-form-label"><b>@Model.Details.Checkin.ToString("MM/dd/yyyy")</b> up to <b>@Model.Details.Checkout.ToString("MM/dd/yyyy")</b></label>
        </div>
    </div>
    
    <div class="form-group">
        <div>
            <label for="message-text" class="col-form-label">Hotel:</label>
            <label for="message-text" class="col-form-label"><b>@Model.Details.HotelName</b></label>
        </div>
    </div>
    <div class="form-group">
        <div>
            <label for="message-text" class="col-form-label">Address:</label>
            <label for="message-text" class="col-form-label"><b>@Model.Details.HotelAddress</b></label>
        </div>
    </div>
    <div class="form-group">
        <div>
            <label for="message-text" class="col-form-label">Guests:</label>
            <label for="message-text" class="col-form-label"><b>@Model.Details.NumberOfGuests</b></label>
        </div>
    </div>
    <div class="form-group">
        <div>
            <label for="message-text" class="col-form-label">Nights:</label>
            <label for="message-text" class="col-form-label"><b>@Model.Details.NumberOfNights</b></label>
        </div>
    </div>
    <div class="form-group">
        <div>
            <label for="message-text" class="col-form-label">Room Capacity:</label>
            <label for="message-text" class="col-form-label"><b>@Model.Details.RoomCapacity</b></label>
        </div>
    </div>
    <div class="form-group">
        <div>
            <label for="message-text" class="col-form-label">Room Description:</label>
            <label for="message-text" class="col-form-label"><b>@Model.Details.RoomDescription</b></label>
        </div>
    </div>
    <div class="form-group">
        <div>
            <label for="message-text" class="col-form-label">Included Breakfast:</label>
            <label for="message-text" class="col-form-label">
                <b>@(Model.Details.BreakfastIncluded == true ? "Yes" : "No")</b>
            </label>
        </div>
    </div>
    <div class="form-group">
        <div>
            <label for="message-text" class="col-form-label">Price per Night:</label>
            <label for="message-text" class="col-form-label"><b>@string.Format("{0:C}", Model.Details.PricePerNight)</b></label>
        </div>
    </div>
    <div class="form-group">
        <div>
            <label for="message-text" class="col-form-label">Total Paid:</label>
            <label for="message-text" class="col-form-label"><b>@string.Format("{0:C}", Model.Details.PaidPrice)</b></label>
        </div>
    </div>
</form>