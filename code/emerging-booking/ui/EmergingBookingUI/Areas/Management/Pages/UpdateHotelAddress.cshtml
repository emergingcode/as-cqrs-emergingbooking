@page "{hotelCode:guid}"

@model EmergingBookingUI.Areas.Management.Pages.UpdateHotelAddressModel

@{ }

<h2>Update Hotel Address</h2>

<form method="post">
    <div class="form-group">
        <label for="exampleFormControlInput1">Street</label>
        <input asp-for="CurrentAddress.Street" class="form-control" id="hotel-street" placeholder="Street" required>
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">District</label>
        <input asp-for="CurrentAddress.District" class="form-control" id="hotel-district" placeholder="District" required>
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">City</label>
        <input asp-for="CurrentAddress.City" class="form-control" id="hotel-city" placeholder="City" required>
        <div class="invalid-feedback">
            Please choose a city.
        </div>
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Country</label>
        <input asp-for="CurrentAddress.Country" class="form-control" id="hotel-country" placeholder="Country" required>
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">ZipCode</label>
        <input asp-for="CurrentAddress.Zipcode" class="form-control" id="hotel-country" placeholder="ZipCode" required>
    </div>

    <div class="form-group">
        <input type="hidden" asp-for="CurrentAddress.HotelCode" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>